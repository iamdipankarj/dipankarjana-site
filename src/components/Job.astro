---
import type { ImageMetadata } from 'astro';
import type { HTMLAttributes } from 'astro/types';
import { Image } from 'astro:assets';

interface Props extends HTMLAttributes<'div'> {
  icon: ImageMetadata;
}

const { icon, ...props } = Astro.props;
---

<div class="flex gap-2 my-2" {...props}>
  <div class="icon"><Image width={180} height={180} src={icon} alt="" /></div>
  
  <div>
    <h3 class="font-semibold"><slot name="header" /></h3>
    <small class="block text-lg my-0.5 opacity-70"><slot name="date" /></small>
    <slot name="content" />
  </div>
</div>
