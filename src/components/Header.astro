---
import TwitterIcon from '@/icons/TwitterIcon.astro';
import GithubIcon from '@/icons/GithubIcon.astro';
import LinkedInIcon from '@/icons/LinkedInIcon.astro';
---

<header class="m-0 px-2 bg-white shadow-sm">
  <nav class="flex items-center justify-between md:justify-center">
    <a href="https://www.linkedin.com/in/iamdipankarj/" target="_blank">
      <span class="sr-only">Follow Dipankar Jana on LinkedIn</span>
      <LinkedInIcon />
    </a>
    <a href="https://x.com/iamdipankarj" target="_blank">
      <span class="sr-only">Follow Dipankar Jana on X</span>
      <TwitterIcon />
    </a>
    <a href="https://github.com/iamdipankarj/" target="_blank">
      <span class="sr-only">Go to Dipankar Jana's GitHub repo</span>
      <GithubIcon />
    </a>
  </nav>
</header>
<style>
  nav {
    a {
      padding: 1em 0.5em;
      color: var(--black);
      border-bottom: 4px solid transparent;
      text-decoration: none;
      display: flex;

      &:active {
        text-decoration: none;
        border-bottom-color: var(--accent);
      }
    }
  }
</style>
