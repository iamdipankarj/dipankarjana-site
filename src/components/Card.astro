---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'div'> {
  icon: string;
  href?: string;
}

const { href = '#', icon, ...props } = Astro.props;
---
<div class="bg-skill-card rounded-2xl flex flex-col text-xl p-2 items-center justify-center transition-all relative hover:bg-skill-card-hover hover:shadow-md group" {...props}>
  <summary class="list-none flex-1">
    <h5 class="mb-1"><slot name="content" /></h5>
  </summary>
  <img class="block w-[10rem] transition-transform h-auto group-hover:scale-105 group-hover:rotate-3" src={icon} alt="Project icon">
  <a class="absolute inset-0 z-30" href={href} target="_blank" rel="noopener noreferrer">
    <span class="sr-only">View Website</span>
  </a>
</div>
